  body.page-border      
    .container
      .row
        .col-lg-8.col-lg-offset-2.animatedx3.bounceInDown
          .panel.panel-default
            .panel-heading 
              h4 Personal Info  
                     
            #textva.alert.alert-warning.animatedx3.flash
              #va_error_btn.button.close(type='button', data-dismiss='alert')
              strong Warning!
              #serverva.span 

            #textva_passed.alert.alert-success
              #va_error_btn.button.close(type='button', data-dismiss='alert')
              strong Approved!
              #serverva__passed.span  

            .panel-body  
             form#registrationForm.form-horizontal(method='post', action='...')
              .form-group
                label.col-lg-3.control-label Loan Amount
                .col-lg-5
                  input.form-control(type='text', name='lamount')            
              .form-group
                label.col-lg-3.control-label First Name
                .col-lg-5
                  //input.form-control(type='text', name='fusername', placeholder="First Name", data-bv-regexp="true", data-bv-notempty="true", data-bv-stringlength="true", data-bv-stringlength-message="The username must be more than 6 and less than 30 characters long", data-bv-notempty-message="#{__('E1')}")
                  input.form-control(type='text', name='fusername', placeholder="First Name")                                      
              .form-group
                label.col-lg-3.control-label Middle Name              
                .col-lg-5
                  input.form-control(type='text', name='musername', placeholder="Middle Name")                                    
              .form-group
                label.col-lg-3.control-label Last Name
                .col-lg-5
                  input.form-control(type='text', name='lusername', placeholder="Last Name")                                    
              .form-group
                label.col-lg-3.control-label SSN
                .col-lg-5
                  input.form-control(type='text', name='ssn', placeholder="9 digits")                                    
              .form-group
                label.col-lg-3.control-label Home Phone
                .col-lg-5
                  input.form-control(type='text', name='hphone', placeholder="xxx-xxx-xxxx")                                    
              .form-group
                label.col-lg-3.control-label Cell Phone
                .col-lg-5
                  input.form-control(type='text', name='cphone', placeholder="xxx-xxx-xxxx")                                    
              .form-group
                label.col-lg-3.control-label Work Phone
                .col-lg-5
                  input.form-control(type='text', name='wphone', placeholder="xxx-xxx-xxxx")  
              .form-group
                label.col-lg-3.control-label Pay Frequency
                .col-lg-5
                  .radio
                    label
                      input(type='radio', name='pfren', value='Weekly')
                      | Weekly
                  .radio
                    label
                      input(type='radio', name='pfren', value='BiWeekly')
                      | BiWeekly
                  .radio
                    label
                      input(type='radio', name='pfren', value='Monthly')
                      | Monthly
              .form-group
                label.col-lg-3.control-label State
                .col-lg-5
                  input.form-control(type='text', name='state', placeholder="xx")    
              .form-group
                label.col-lg-3.control-label Monthly Income
                .col-lg-5
                  input.form-control(type='text', name='mincome', placeholder="xx")                                                                                 
              .form-group
                label.col-lg-3.control-label Date of birth
                .col-lg-5
                  input.form-control(type='text', name='birthday', placeholder='mm/dd/yyyy')
              .form-group
                label.col-lg-3.control-label Email address
                .col-lg-5
                  input.form-control(type='text', name='email')                  
              .form-group
                .col-lg-8.col-lg-offset-3
                  // Do NOT use name="submit" or id="submit" for the Submit button 
                  button.btn.btn-default(type='') Submit 
                  | &nbsp;
                  // Reset help css style
                  //#rest_btn.button.btn.btn-default(type='') Reset 
                  #va_btn.button.btn.btn-default Validate      
                      
